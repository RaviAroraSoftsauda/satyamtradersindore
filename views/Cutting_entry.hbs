                                                                                placeholder="Select Product" style="text-align: -webkit-left; width:100%"> 
                                                                                <option value=""></option>
                                                                                {{#each rawMat_mast}}
                                                                                    <option value="{{this.id}}" data-serialnum="{{this._id}}">{{this.Rm_Des}}</option>
                                                                                {{/each}}
                                                                            </select>
                                                                        </td>
                                                                        <td>
                                                                            <input type="number" name="row_mat_group[0][Raw_Qty]" id="Raw_Qty0"  oninput='calPlanraw(0)' 
                                                                            class="form-control CutRawfocus addReq" style="text-align: -webkit-right;"/>
                                                                            <input type="hidden" name="row_mat_group[0][plan_id]" id="plan_id0">
                                                                            <input type="hidden" name="row_mat_group[0][plan_grp_id]" id="plan_grp_id0">
                                                                        </td>
                                                                    </tr>
                                                                    <tr id="contract_div_Raw">
