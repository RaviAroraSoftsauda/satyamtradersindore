                                                                        </td>
                                                                        <td>
                                                                            <input type="hidden" name="buyrn" value="0" id="buyrn0" oninput='calsalesorder(1)'
                                                                            class="form-control addReq" style="width: 102px;text-align: -webkit-right;"/>
                                                                            <select  name="sales_or_group[0][so_disc]" id="descpso0"  class="form-control select2" 
                                                                                placeholder="Select Product" style="text-align: -webkit-left; width:100%"> 
                                                                                <option value=""></option>
                                                                                {{#each product}}
                                                                                    <option value="{{this.id}}" data-serialnum="{{this._id}}">{{this.Fg_Des}}</option>
                                                                                {{/each}}
                                                                            </select>
                                                                        </td>
                                                                        <td>
                                                                            <select  name="sales_or_group[0][WIP_name]" id="WIP_name0"  class="form-control prbank select2" 
                                                                                placeholder="Select WIP" style="text-align: -webkit-left; width:100%" onchange="getRawMat(0)"> 
                                                                                <option value=""></option>
                                                                                {{#each WIP_mast}}
                                                                                    <option value="{{this.id}}" data-serialnum="{{this._id}}">{{this.Fg_Des}}</option>
                                                                                {{/each}}
                                                                            </select>
                                                                        </td>
                                                                        <td>
                                                                            <input type="number" name="sales_or_group[0][so_qty]" id="so_qty0"  oninput='calPlan(0)' 
                                                                            class="form-control amountfocus addReq" style="text-align: -webkit-right;"/>
                                                                            <input type="hidden" name="sales_or_group[0][plan_id]" id="plan_id0">
                                                                            <input type="hidden" name="sales_or_group[0][plan_grp_id]" id="plan_grp_id0">
                                                                        </td>
                                                                    </tr>
                                                                    <tr id="contract_div_po">
                                                                            <th>Total</th>
                                                                            <th></th>
                                                                            <th></th>
                                                                            <td><input type="text" name="tot_sooq" id="tot_sooq"
                                                                            placeholder="Total" class="form-control tot_sooq" oninput='calPlan(1)' style="text-align: -webkit-right;"
                                                                            readonly  tabindex="-1"></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                 <div class="row">
                                                    <div class="col-sm-12">
                                                      <button type="button" class="btn btn-primary addWIPEntry center-block nofocus" id="add">Add Item</button>  
                                                    </div>
                                                </div> 
                                            <div class="panel-footer">
                                                <div class="action clearfix">
                                                    <div class="col-md-12" align="center">
                                                        <div >
                                                            <button type="submit" name="save" class="btn btn-success WIPSave">Submit</button>
                                                            <button type="reset" class="btn btn-danger">Cancel</button>
                                                            <a href="/Cutting_entry/Cutting_entrylist" class="btn btn-info" style="margin-top: 1.5em">Back</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                        </form>
