                                                      <button type="button" class="btn btn-primary addCuttingRawEntry center-block nofocus" id="addCutRaw">Add Item</button>  
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="table-responsive adjustmentstable">
                                                            <table class="table worksheet_repeat_row">
                                                                <thead>
                                                                    <tr>
                                                                        <th style="width: 15em">Plan No</th>
                                                                        <th>Finish Goods Name</th>
                                                                        <th>WIP Name</th>
                                                                        <th style="width: 15em">Qty</th>
                                                                        <th style="width: 5em">Delete</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
